{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "react-jsx",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"incremental": true,
		"moduleResolution": "Node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"baseUrl": "./",
		"paths": {
			"@bbr/components": [
				"./src/components"
			],
			"@bbr/components/*": [
				"./src/components/*",
				"./src/components/primitives/*"
			],
			"@bbr/hooks": [
				"./src/hooks"
			],
			"@bbr/utils": [
				"./src/utils"
			],
			"@bbr/types": [
				"./src/types",
			],
			"@bbr/internalComponent/*": [
				"./src/components/internal/*",
				"./src/components/primitives/internal/*",
			]
		}
	},
	"include": [
		"src",
	],
}
